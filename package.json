{
  "name": "nartya",
  "version": "1.3.0",
  "description": "Nartya - Application de streaming d'animes",
  "main": "src/electron/main.js",
  "author": "Zeleff",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win --x64",
    "scrape": "node src/scraper/indexer.js",
    "release": "node scripts/release.js",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags",
    "postversion": "echo ✅ Version mise à jour et tag poussé. GitHub Actions va créer la release automatiquement !",
    "check-release": "node scripts/check-release.js"
  },
  "build": {
    "appId": "com.zeleff.nartya",
    "productName": "Nartya",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "NartyaTeam",
      "repo": "nartya",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "cheerio": "1.0.0-rc.12",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^26.0.12"
  }
}
