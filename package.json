{
  "name": "nartya",
  "version": "1.0.0-beta.1",
  "description": "Nartya - Application de streaming d'animes",
  "main": "src/electron/main.js",
  "author": "Zeleff",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",
    "scrape": "node src/scraper/indexer.js"
  },
  "build": {
    "appId": "com.zeleff.nartya",
    "productName": "Nartya",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "axios": "^1.7.7",
    "cheerio": "1.0.0-rc.12",
    "node-fetch": "2.7.0"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^26.0.12"
  }
}
